{
  "name": "LaTeX",
  "dockerFile": "../Dockerfile",
  // "image": "ghcr.io/ehacking-websec/vscode-devcontainer-latex:main",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "settings": {
        "latex-workshop.latex.tools": [
          {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
              "-synctex=1",
              "-interaction=nonstopmode",
              "-file-line-error",
              "-pdf",
              "-outdir=%OUTDIR%",
              "%DOC%"
            ]
          },
          {
            "name": "latexmk-solution",
            "command": "latexmk",
            "args": [
              "-synctex=1",
              "-interaction=nonstopmode",
              "-file-line-error",
              "-pdf",
              "-outdir=%OUTDIR%",
              "-jobname=%DOCFILE%-Solution",
              "%DOC%"
            ]
          }
        ],
        "latex-workshop.latex.recipes": [
          {
            "name": "Task",
            "tools": [
              "latexmk"
            ]
          },
          {
            "name": "Solution",
            "tools": [
              "latexmk-solution"
            ]
          },
          {
            "name": "Task + Solution",
            "tools": [
              "latexmk",
              "latexmk-solution"
            ]
          }
        ],
        "latex-workshop.synctex.afterBuild.enabled": true,
        "latex-workshop.view.pdf.trim": 1,
        "latex-workshop.view.pdf.viewer": "tab",
        "ltex.language": "en-US",
        "ltex.ltex-ls.path": "/opt/ltex/",
        "ltex.java.path": "/usr/lib/jvm/default-java",
        "ltex.latex.commands": {
          "\\lstinput{}": "ignore",
          "\\lstinline||": "ignore",
          "\\lstinline{}": "ignore",
          "\\moderncvtheme{}": "ignore"
        },
        "commentAnchors.tags.matchPrefix": ["#", "%"],
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "telemetry.enableTelemetry": false
      },
      "extensions": [
        "ExodiusStudios.comment-anchors",
        "james-yu.latex-workshop",
        "ltex-plus.vscode-ltex-plus",
        "tecosaur.latex-utilities"
      ]
    }
  }
}
